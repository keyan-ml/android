<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar_of_default_storage"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/default_storage_back_view"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/left_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="默认保存路径"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_centerInParent="true"
            android:gravity="center"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="设置上传文件后，处理结果的保存路径和文件名称"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="请输入上传文件后，处理结果的默认保存路径："
        android:gravity="bottom"
        android:paddingLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">
        <EditText
            android:id="@+id/default_storage_dir_path"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="默认保存路径"
            android:gravity="center_vertical"
            android:background="#fff"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"/>
        <Button
            android:id="@+id/default_storage_commit_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="保存"/>
    </LinearLayout>


    <TextView
        android:id="@+id/default_storage_error_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>

</LinearLayout>
