<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zwm.myapplication.fragment.SignInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#aaa"
            android:text="智能分析"
            android:textSize="20sp"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#ccc">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="o-啊-o\no-哈哈哈-o\no-哈哈哈哈-o\no-哈哈哈-o\no-嗝-o"
                android:textSize="20sp"
                android:textColor="#f0f"
                android:layout_marginTop="-140dp"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#aff"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="邮箱"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/sign_in_uemailaddress"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="1210500550@qq.com"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="密码"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/sign_in_upassword"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="1210500"
                        android:inputType="textPassword" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sign_in_error_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/sign_in_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="登录" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
